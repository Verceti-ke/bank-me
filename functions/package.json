{
  "name": "functions",
  "scripts": {
    "shell": "npm run build && NODE_ENV=local firebase functions:shell",
    "start": "nodemon",
    "deploy": "firebase deploy --only functions --token \"$FIREBASE_TOKEN\" --non-interactive",
    "deploy:ci": "if test \"$BRANCH_NAME\" = \"master\"; then npm run deploy; else npm run deploy; fi",
    "logs": "firebase functions:log",
    "build:local": "NODE_ENV=local tsc",
    "build:dev": "NODE_ENV=dev tsc",
    "build:prod": "NODE_ENV=prod tsc",
    "build:ci": "if test \"$BRANCH_NAME\" = \"master\"; then npm run build:prod; else npm run build:dev; fi",
    "watch": "tsc --watch",
    "lint": "tslint --project tsconfig.json",
    "serve": "firebase functions:config:get > .runtimeconfig.json && npm run build:local && NODE_ENV=local firebase emulators:start --only functions",
    "nodemon": "nodemon"
  },
  "engines": {
    "node": "10"
  },
  "main": "build/index.js",
  "dependencies": {
    "@google-cloud/logging-winston": "^3.0.6",
    "@types/json2csv": "4.5.1",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.46",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "csv-parser": "^2.3.2",
    "express": "^4.17.1",
    "firebase": "^7.13.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.9.0",
    "json2csv": "4.5.4",
    "mkdirp-promise": "^5.0.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.31",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "ts-node": "^8.8.1",
    "winston": "^3.2.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/node": "^13.13.12",
    "firebase-functions-test": "^0.1.6",
    "tslint": "^5.20.1",
    "typescript": "^3.2.2"
  },
  "private": true
}
